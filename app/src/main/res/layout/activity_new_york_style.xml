<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChicagoStyleActivity">

    <Button
        android:id="@+id/removeButton"
        android:layout_width="39dp"
        android:layout_height="36dp"
        android:onClick="removeButton"
        android:text="<"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="415dp" />

    <ListView
        android:id="@+id/displayToppings"
        android:layout_width="170dp"
        android:layout_height="415dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="234dp"
        tools:layout_editor_absoluteY="258dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New York Style"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="34dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="80dp"
        android:layout_height="33dp"
        android:text="Select Pizza Flavor:"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="77dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Size:"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="131dp" />

    <Spinner
        android:id="@+id/flavorBox"
        android:layout_width="146dp"
        android:layout_height="31dp"
        android:onClick="selectFlavor"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="79dp"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/sizeBox2"
        android:layout_width="148dp"
        android:layout_height="32dp"
        android:onClick="selectSize"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="131dp" />

    <ListView
        android:id="@+id/availableToppings"
        android:layout_width="175dp"
        android:layout_height="416dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="258dp" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="39dp"
        android:layout_height="36dp"
        android:onClick="addButton"
        android:text=">"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="364dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price:"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="699dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/addToOrderButton"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:onClick="addPizzaToOrder"
        android:text="Add to Order"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="224dp"
        tools:layout_editor_absoluteY="690dp" />

    <EditText
        android:id="@+id/priceBox2"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:text=""
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="680dp" />
</androidx.constraintlayout.widget.ConstraintLayout>