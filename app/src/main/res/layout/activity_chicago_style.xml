<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChicagoStyleActivity">

    <Button
        android:id="@+id/removeButton"
        android:layout_width="39dp"
        android:layout_height="36dp"
        android:text="<"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="415dp"
        tools:ignore="MissingConstraints" />

    <ListView
        android:id="@+id/displayToppings"
        android:layout_width="170dp"
        android:layout_height="415dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="234dp"
        tools:layout_editor_absoluteY="258dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chicago Style"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="34dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="80dp"
        android:layout_height="33dp"
        android:text="Select Pizza Flavor:"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="77dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Size:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="131dp"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/flavor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="79dp"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/sizeSpin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="131dp"
        tools:ignore="MissingConstraints" />

    <ListView
        android:id="@+id/availableToppings"
        android:layout_width="175dp"
        android:layout_height="416dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="258dp" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="39dp"
        android:layout_height="36dp"
        android:text=">"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="364dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price:"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="699dp" />

    <Button
        android:id="@+id/addToOrderButton"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:text="Add to Order"
        tools:layout_editor_absoluteX="224dp"
        tools:layout_editor_absoluteY="690dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="162dp"
        android:layout_height="147dp"
        android:scaleType="center"
        android:src="@drawable/ic_launcher_background"
        tools:layout_editor_absoluteX="213dp"
        tools:layout_editor_absoluteY="42dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/priceBox2"
        android:layout_width="90dp"
        android:layout_height="23dp"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="699dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>