<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrentOrderActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="151dp"
        android:layout_height="33dp"
        android:text="Current Order"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Number:"
        android:textSize="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="95dp" />

    <Button
        android:id="@+id/displayOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="display"
        android:text="Display Order"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="85dp" />

    <ListView
        android:id="@+id/listViewOrders"
        android:layout_width="349dp"
        android:layout_height="357dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="187dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtotal $:"
        android:textSize="14dp"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="568dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sales Tax:"
        android:textSize="14dp"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="615dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Total: "
        android:textSize="14dp"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="665dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/removeButton"
        android:layout_width="121dp"
        android:layout_height="52dp"
        android:text="Remove Pizza"
        android:textSize="10dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="258dp"
        tools:layout_editor_absoluteY="558dp" />

    <Button
        android:id="@+id/addToOrderButton"
        android:layout_width="117dp"
        android:layout_height="50dp"
        android:text="Add Order"
        android:textSize="10dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="262dp"
        tools:layout_editor_absoluteY="611dp" />

    <Button
        android:id="@+id/cancelOrderButton"
        android:layout_width="118dp"
        android:layout_height="54dp"
        android:text="Clear Order"
        android:textSize="10dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="262dp"
        tools:layout_editor_absoluteY="665dp" />

    <EditText
        android:id="@+id/subtotal"
        android:layout_width="111dp"
        android:layout_height="33dp"
        android:inputType="text"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="566dp" />

    <EditText
        android:id="@+id/salesTax"
        android:layout_width="113dp"
        android:layout_height="30dp"
        android:inputType="text"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="615dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/orderTotal"
        android:layout_width="113dp"
        android:layout_height="25dp"
        android:inputType="text"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="665dp" />

    <EditText
        android:id="@+id/textView6"
        android:layout_width="93dp"
        android:layout_height="36dp"
        android:text=""
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="87dp" />
</androidx.constraintlayout.widget.ConstraintLayout>